<odoo>
  <data>
    <!--template for designing-->

    <!--list view-->
    <record model="ir.ui.view" id="teachers_form_list">
      <field name="name">Teachers</field>
      <field name="model">teacher.teacher</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="class_id"/>
          <field name="id_card" />
        </tree>
      </field>
    </record>
    <!--form view -->
    <record model="ir.ui.view" id="teachers_form_form">
      <field name="name">Teachers</field>
      <field name="model">teacher.teacher</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled" options="{'clickable': '1'}"/>
            <button name="action_get_month" string="get month" class="btn-primary" type="object"/>

          </header>
          <sheet>
            <group>
              <group>
                <div class="oe_title">
                  <h1>
                    <field name="name" placeholder="Name" default_focus="1" />
                  </h1>
                </div>
              </group>
              <group>
                <field name="image" class="oe_avatar" widget="image" nolabel="1"/>
              </group>

            </group>
            <group>
              <group>
                <field name="age"/>
                <field name="class_id"/>
                <field name="date"/>
                <field name="plus_date"/>
              </group>
              <group>
                <field name="id_card"/>
                <field name="phone" widget="phone" options="{'enable_sms': True}"/>
                <field name="gender"/>
                <field name="year"/>
                <field name="start_quarter"/>
                <field name="end_quarter"/>
              </group>
            </group>
            <group>
              <field name="note"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="action_teachers_from">
      <field name="name">Teachers</field>
      <field name="res_model">teacher.teacher</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Teachers" id="teacher_teacher_menu_id" parent="radical_school_menu_root" sequence="4"
              action="action_teachers_from"/>



  </data>
</odoo>