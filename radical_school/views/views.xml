<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="radical_school.list">
            <field name="name">Radical School</field>
            <field name="model">radical_school.radical_school</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="radical_school_action_window">
            <field name="name">Radical School</field>
            <field name="res_model">radical_school.radical_school</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->


        <!-- Top menu item -->
        <menuitem name="Radical School" id="radical_school_menu_root"/>
        <!-- menu categories -->
        <menuitem name="Radical School" id="radical_school_menu" parent="radical_school_menu_root" sequence="1"/>
        <!-- actions -->
        <menuitem name="List" id="radical_school_menu_child" parent="radical_school_menu" sequence="2"
                  action="radical_school_action_window"/>

    </data>
</odoo>