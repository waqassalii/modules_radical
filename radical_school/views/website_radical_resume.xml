<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--creating menu in website -->
        <!--on clicking this menu the given url will be called-->
        <record id="menu_radical_resume_class" model="website.menu">
            <field name="name">Resumes</field>
            <field name="url">/resumes</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">8</field>
        </record>

        <template id="radical_resume_templ1" name="Resumes">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <form role="form" action="/resumes" method="post">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="form-group">
                                    <label for="applicant_name" class="control-label">Name</label>
                                    <input name="applicant_name" type="text" t-att-value="applicant_name" id="applicant_name" class="form-control"
                                           placehoder="e.g. Waqas Ali" required="required"/>
                                </div>
                                 <div class="form-group">
                                    <label for="applicant_id_card" class="control-label">ID Card No.</label>
                                    <input name="applicant_id_card" type="text" t-att-value="applicant_id_card" id="applicant_id_card" class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <label for="applicant_phone" class="control-label">Phone</label>
                                    <input name="applicant_phone" type="text" t-att-value="applicant_phone" id="applicant_phone" class="form-control"
                                           placehoder="0300 xxxxx"/>
                                </div>
                                <div class="form-group">
                                    <label for="applicant_age" class="control-label">Age</label>
                                    <input name="applicant_age" type="text" t-att-value="applicant_" id="age" class="form-control"
                                           placehoder="23"/>
                                </div>
                                <div class="form-group">
                                    <label for="applicant_gender" class="control-label">gender</label>
                                    <input name="applicant_gender" type="text" t-att-value="applicant_gender" id="applicant_gender"
                                           class="form-control"
                                           placehoder="gender"/>
                                </div>
                                <div class="form-group">
                                    <label for="applicant_qualification" class="control-label">Qualification</label>
                                    <input name="applicant_qualification" type="text" t-att-value="applicant_qualification" id="applicant_qualification"
                                           class="form-control"
                                           placehoder="Qualifications"/>
                                </div>
                                <div t-attf-class="clearfix oe_login_buttons">
                                    <button type="submit" class="btn btn-primary">Submit
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </t>


        </template>
        <template id="radical_resumes_thanks" name="Special Class">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                             <h3>Thank You!</h3>
                                    <div class="row">
                                        <div class="col-8">
                                            Thanks, Your Resumes is submitted
                                        </div>
                                        <div class="col-4">
                                            we will reach you soon
                                        </div>

                                    </div>

                        </div>
                    </div>
                </div>
            </t>


        </template>

